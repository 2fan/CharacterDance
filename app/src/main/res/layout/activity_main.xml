<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#eee"
    android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:title="@string/app_name"
        android:titleTextColor="#fff"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="56dp">
    </Toolbar>
    <GridLayout
        android:orientation="horizontal"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.liu.kinton.CharacterDance.widget.SquareImageView
            android:id="@+id/iv_main_convert_pic"
           android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/main_function_button_bg_selector"
            android:padding="40dp"
            android:layout_margin="24dp"
            android:contentDescription="@null"
            android:src="@mipmap/photo"
            />

        <com.liu.kinton.CharacterDance.widget.SquareImageView
            android:id="@+id/iv_main_convert_video"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_margin="24dp"
            android:contentDescription="@null"
            android:background="@drawable/main_function_button_bg_selector"
            android:src="@mipmap/video"
            />

        <com.liu.kinton.CharacterDance.widget.SquareImageView
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:layout_margin="24dp"
        android:contentDescription="@null"
        android:background="@drawable/main_function_button_bg_selector"
        android:src="@mipmap/camer"
        />

        <com.liu.kinton.CharacterDance.widget.SquareImageView
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:id="@+id/iv_main_folder"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_margin="24dp"
            android:contentDescription="@null"
            android:background="@drawable/main_function_button_bg_selector"
            android:src="@mipmap/folder"
            />

    </GridLayout>



</LinearLayout>